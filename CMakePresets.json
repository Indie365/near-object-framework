{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16
    },
    "configurePresets": [
        {
            "name": "dev",
            "displayName": "Development",
            "description": "Enables development build for inner-loop",
            "cacheVariables": {
                "NOF_BUILD_ENVIRONMENT_DEVELOPMENT": "development",
                "NOF_DEPENDENCY_RESOLUTION_METHOD": "FetchContent"
            }
        },
        {
            "name": "vcpkg",
            "displayName": "Vcpkg Base",
            "description": "Defines the core settings for all vcpkg-based builds",
            "hidden": true,
            "cacheVariables": {
                "NOF_DEPENDENCY_RESOLUTION_METHOD": "vcpkg"
            }
        },
        {
            "name": "vcpkg-dev",
            "displayName": "Vcpkg Integration",
            "description": "Enables development build for integration with vcpkg-based environments",
            "inherits": [
                "vcpkg"
            ],
            "cacheVariables": {
                "NOF_BUILD_ENVIRONMENT_DEVELOPMENT": "development"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "configurePreset": "dev",
            "configuration": "Debug"
        },
        {
            "name": "vcpkg",
            "configurePreset": "vcpkg-dev",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configuration": "Release",
            "inherits": [
                "dev"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "dev",
            "configurePreset": "dev"
        }
    ]
}
