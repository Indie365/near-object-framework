
vcpkg_from_git(
    OUT_SOURCE_PATH SOURCE_PATH
    URL @NOF_VCPKG_DRIVER_URL@
    REF @NOF_VCPKG_DRIVER_GIT_REF@
    FETCH_REF @NOF_VCPKG_DRIVER_GIT_REF_FETCH@
)

vcpkg_check_features(
    OUT_FEATURE_OPTIONS FEATURE_OPTIONS
    # TODO: try to get 'PREFIX NOF_VCPKG' working 
    FEATURES
        msvc-link-static-runtime NOF_VCPKG_FEATURE_USE_MSVC_STATIC_RUNTIME
        windows-build NOF_WINDOWS_BUILD
        windows-build-driver NOF_WINDOWS_BUILD_DRIVER
)

vcpkg_cmake_configure(
    SOURCE_PATH ${SOURCE_PATH}
    OPTIONS
        -DVCPKG_MANIFEST_DIR=${SOURCE_PATH}/ports/nearobject-framework
        -DNOF_USE_VCPKG=TRUE
        -DNOF_DISABLE_TESTS=TRUE
        ${FEATURE_OPTIONS}
)

vcpkg_cmake_install()
vcpkg_copy_pdbs()

file(REMOVE_RECURSE "${CURRENT_PACKAGES_DIR}/debug/include")
file(INSTALL "${SOURCE_PATH}/LICENSE" DESTINATION "${CURRENT_PACKAGES_DIR}/share/${PORT}" RENAME copyright)
